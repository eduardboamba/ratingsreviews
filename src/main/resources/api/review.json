{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title":"Review",
  "type":"object",
  "properties":
  {
    "id":
    {
      "type":"string"
    },
    "createdAt":
    {
      "type":"string",
      "format":"date-time"
    },
    "url":
    {
      "type":"string",
      "format":"uri"
    },
    "reviewer":
    {
      "type":"string",
      "pattern":"^.+"
    },
    "product":
    {
      "type":"string",
      "pattern":"^.+"
    },
    "title":
    {
      "type":"string",
      "pattern":"^.+"
    },
    "comment":
    {
      "type":"string",
      "pattern":"^.+"
    },
    "rating":
    {
      "type":"integer",
      "minimum":1,
      "maximum":5
    }
  },
  "required":["id","createdAt","reviewer","product"]
}
